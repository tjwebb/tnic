<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>editor_server</servlet-name>
        <servlet-class>tnic.editor.Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>run</servlet-name>
        <servlet-class>tnic.jsvm.Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>editor_server</servlet-name>
        <url-pattern>/editor_server</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>run</servlet-name>
        <url-pattern>/run</url-pattern>
    </servlet-mapping>


    <!-- test servlets below here -->
    <servlet>
        <servlet-name>jstest</servlet-name>
        <servlet-class>tnic.test.JavascriptInterpreterTest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>vfstest</servlet-name>
        <servlet-class>tnic.editor.Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jstest</servlet-name>
        <url-pattern>/jstest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vfstest</servlet-name>
        <url-pattern>/vfstest</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
